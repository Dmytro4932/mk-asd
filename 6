#include <iostream>
#include <Windows.h>

// Рекурсивна функція для обчислення чисел Фібоначі
int fibonacci(int n) {
    // Базові випадки: числа Фібоначі для 0 та 1
    if (n <= 1) {
        return n;
    }
    // Рекурсивний виклик для обчислення числа Фібоначі для n-1 та n-2
    return fibonacci(n - 1) + fibonacci(n - 2);
}

int main() {

    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    int n;
    std::cout << "Введіть номер числа Фібоначі: ";
    std::cin >> n;

    // Виклик рекурсивної функції для обчислення числа Фібоначі
    int result = fibonacci(n);

    std::cout << "Число Фібоначі для " << n << " = " << result << std::endl;

    return 0;
}
